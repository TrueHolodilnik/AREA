close_victim 	= actor
far_anim 		= nil
far_victim 		= nil
close_distance  = 2
far_distance 	= 6
close_snd_distance = 5
use = {=actor_enemy} false, true
allow_break = false
trade_enable = true
meet_dialog = {-ano_german_firstmeet_1} ano_german_firstmeet_1, ano_german_1meet 

