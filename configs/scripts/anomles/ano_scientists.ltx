on_info2 = {!npc_in_zone(ano_smart_terrain_3_1_surge_hide_a3)} %=teleport_npc(ano_smart_terrain_3_1_german_walker_1_walk)%

[camper@actor_away2]:camper@default
on_timer = 13000 | camper@actor_away
path_walk = german_walker_2_walk
path_look = german_walker_2_look
on_info = {-ano_actor_away_german} camper@wait_actor

[meet]
close_snd_hello = ano_ecolog_german_greeting
close_snd_bye = ano_ecolog_german_farewell
