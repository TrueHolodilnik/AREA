[logic]
active = ph_door@locked

[ph_door@locked]
locked = true
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = {!actor_can_unlock_door()} ph_door@locked, %=play_sound_on_actor(interface\inv_unlock_door) % ph_door@close

[ph_door@close]
locked = false
closed = true
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = ph_door@open

[ph_door@open]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = {!actor_can_unlock_door()} %=play_sound_on_actor(interface\inv_unlock_door)% ph_door@locked, ph_door@close
on_timer = 4000 | ph_door@open_temp

[ph_door@open_temp]
locked = false
closed = false
snd_open_start = wood_large_open
snd_close_start = wood_large_close_start
snd_close_stop = wood_large_close_stop
on_use = {!actor_can_unlock_door()} %=play_sound_on_actor(interface\inv_unlock_door)% ph_door@locked, ph_door@close
on_timer = 1 | ph_door@close

