; CRITICAL BUG: Из-за кривой реализации ph_door неписи всей кучей спамят открытие и закрытие дверей в пределах нескольких этажей
; поэтому с вероятностью 95% они застревают в одном коридоре и не поднимаются по лестницам/не заходят в другие помещения

[logic]
active = ph_door@locked

[ph_door@locked_base]
locked = true
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
heavy = true

[ph_door@locked]:ph_door@locked_base
on_info = {+x11_monitor_disabled} ph_door@open

[ph_door@close]
locked = false
closed = true
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
on_use = ph_door@open
hit_on_bone = 1|ph_door@free|2|ph_door@free

[ph_door@open]
locked = false
closed = false
snd_open_start = trader_door_open_start
snd_close_start = trader_door_close_start
snd_close_stop = trader_door_close_stop
; on_use = ph_door@close
;hit_on_bone = 1|ph_door@free|2|ph_door@free
tip_open = none
tip_close = none
heavy = true

[ph_door@free]
locked = false
closed = true
snd_open_start = no_sound
snd_close_start = no_sound
snd_close_stop = no_sound
no_force = true
on_use = ph_door@open